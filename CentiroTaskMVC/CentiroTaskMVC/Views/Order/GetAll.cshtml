@model CentiroTaskMVC.Models.Connect

@{
    ViewData["Title"] = "LoginView";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<head>

    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.css" />


</head>

<body>

    <h4>Menu</h4>
@Html.ActionLink("Create new user", "NewUserView", "Order", null, new { title = "Leave the order search page and return home" }) 
        <br />
@Html.ActionLink("Return to home page", "Index", "Home", null, new { title = "Leave the order search page and return home" })

        
<h4>Orders</h4>
<p>Below are the orders made by employees at Centiro.</p>

<div class="hello">
    <table>
        <tr>
            @foreach (var orderColumn in ViewBag.AllOrdersTable.Columns)
            {
                <th>@orderColumn.ColumnName</th>
            }
        </tr>
        @foreach (var orderRow in ViewBag.AllOrdersTable.Rows)
        {
        <tr>
            @for (int i = 0; i < ViewBag.AllOrdersTable.Columns.Count; ++i)
            {
                <td>@orderRow[i]</td>
            }

            <td>@Html.ActionLink("Delete", "DeleteOrder", "Order", new { productNumber = orderRow["ProductNumber"] }, new { title = "Click to delete order " + orderRow["ProductNumber"] + "-" + orderRow["OrderNumber"] })
        </tr>
        }
    </table>
</div>
</body>

